FloatLayout:
    Background:
        id: background  #   идетнитфикатор фона, к которуму обращаемся в on_start(self)
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'sky.png'
            Rectangle: # Добавляем текстуру первого облака
                size: self.width, 300
                pos: self.pos[0], self.pos[1] + self.height - 300
                texture: self.cloud_texture
            Rectangle: # Добавляем вторую текстуру облака
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture_2